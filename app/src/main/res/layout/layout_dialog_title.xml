<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_title_panel"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_dialog_title_height"
    android:background="@color/jtx_blue">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/space_8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ico_arrow_left"
        android:contentDescription="@string/app_name"
        android:visibility="invisible"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_title_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/space_8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ico_clear"
        android:contentDescription="@string/app_name"
        android:background="@drawable/bg_transparent"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/dialog_title_back"
        android:layout_toStartOf="@id/dialog_title_close"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textAppearance="@style/HeadLine"
        android:textColor="@color/white"
        />

</RelativeLayout>