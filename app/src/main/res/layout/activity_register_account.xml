<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="giavu.hoangvm.hh.activity.register.RegisterAccountViewModel"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_top_50dp"
        tools:context="giavu.hoangvm.hh.activity.register.RegisterAccountActivity">
        <TextView
                android:id="@+id/login_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="22dp"
                android:gravity="center_horizontal"
                android:text="Sign Up"
                android:textColor="@color/btn_bg"
                android:fontFamily="@font/wallpoet_regular"
                android:textSize="50sp"/>
        <FrameLayout
                android:id="@+id/register_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

        </FrameLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/margin_top_50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <!-- Register -->
            <Button
                    android:id="@+id/button_register"
                    style="@style/MainPrimaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/dimen_16dp"
                    android:onClick="@{() -> viewModel.register()}"
                    android:enabled="@{viewModel.registerButtonEnabled}"
                    android:text="@string/action_register" />

            <TextView
                    android:id="@+id/hasAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:onClick="@{() -> viewModel.gotoLogin()}"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/margin_top_50dp"
                    android:text="@string/already_has_account" />
        </LinearLayout>

    </LinearLayout>
</layout>
